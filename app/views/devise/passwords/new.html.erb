<div class="session-form">
<div class=" row signin-form">
<h1 style="text-align: center;"><b>Forgot your password?</b></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="col-form">
    
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control',placeholder:'Email Address' %>
  </div>

  <div class="col-form">
    <%= f.submit "Send me reset password instructions",class:'btn btn-danger' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>