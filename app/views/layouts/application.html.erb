<!DOCTYPE html>
<html>
  <head>
    <title>LoginApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
  <ul>
    <li class="title"><h2 class="font_logo"><%= image_tag 'book_logo.jpeg',width:70,height:70 ,class:'logo'%> Book Shopy</h2></li>
    <% if user_signed_in? %> 
      <li class="session-li"><%= link_to "LOGOUT", destroy_user_session_path, data:{turbo_method: :delete },class:'session'%> </li>
      <li><%= link_to 'USERS',homes_path,class:'nav-link' %></li>
      <li><%= link_to 'NEW',new_home_path ,class:'nav-link' %></li>
      <li><%= link_to 'ORDERS',order_books_path,class:'nav-link' %></li>
      <li><%= link_to 'ORDER BOOK',new_order_book_path,class:'nav-link' %></li>
      <li class="user-account"><%= image_tag 'user_logo.png',width:50,height:50,class:'logo'%><%= link_to '',new_profile_path,class:'' %></li>
    <% else %>
      <li class="session-li "><%= link_to "SIGNIN", new_user_session_path ,class:'session'%> </li>
      <li class="session-li "><%= link_to 'SIGNUP' ,new_user_registration_path ,class:'session'%></li>
    <% end %>
    
  </ul>
</nav>

 <!-- flash message for devise -->
<center>
<p style="color:green;font-size: 3rem;" class="notice">
  <%= notice %></p>
<p style="color:red;font-size: 3rem;" class="alert"><%= alert %></p></center>

    <%= yield %>

  </body>
</html>
