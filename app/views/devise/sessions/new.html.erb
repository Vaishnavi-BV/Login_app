<div class="session-form">
<div class="signin-form">
<h2 style="text-align: center;"><b>Sign in</b></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-form">
    <%= f.email_field :email, autofocus: false, autocomplete: 'email',class: 'form-control',placeholder:'Email Address'%>
  </div>

  <div class="col-form">
    <%= f.password_field :password, autocomplete: 'Password' ,class: 'form-control',placeholder:'Password'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="col-form">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,class: 'form-label'%>
    </div>
  <% end %>

  <div class="col-form">
    <%= f.submit "Log in" ,class: 'btn btn-danger' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>