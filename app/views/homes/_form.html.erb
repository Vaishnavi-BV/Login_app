<div class="cards">
<%= form_with model: @user do |form| %>
<div class="col">
	<%= form.text_field :name ,placeholder:'Name',class: 'form-control' %>
	<% @user.errors.full_messages_for(:name).each do |message| %>
	<div class="error"><%= message %></div>
	<% end %>
</div>
<div class="col">
	<%= form.text_field :age ,placeholder: 'Age',class: 'form-control' %>
	<% @user.errors.full_messages_for(:age).each do |message| %>
	<div class="error"><%= message %></div>
	<% end %>
</div>
<div class="col">
	<%= form.text_area :address ,placeholder:'Address',class: 'form-control' %>
	<% @user.errors.full_messages_for(:address).each do |message| %>
	<div class="error"><%= message %></div>
	<% end %>
</div>
<div class="col">
	<%= form.text_field :phone ,placeholder:'Phone Number',class: 'form-control'%>
	<% @user.errors.full_messages_for(:phone).each do |message| %>
	<div class="error"><%= message %></div>
	<% end %>
</div>
<div class="col">
	<%= form.submit class:"btn btn-success" %>
</div>
<% end %>
</div>

