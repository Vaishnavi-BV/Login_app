
<form class="row g-6">
	<%= form_with model: @profile do |form| %>	

  <div class="col-md-6">
   		<%= form.label :first_Name ,class:'form-label' %>
		<%= form.text_field :firstname, class:'form-control' %>
  </div>

  <div class="col-md-6">
    	<%= form.label :last_Name , class:'form-label' %>
		<%= form.text_field :lastname ,class: 'form-control' %>
  </div>

  <div class="col-md-6">
   		<%= form.label :phone_number,class: 'form-label' %>
		<%= form.text_field :phone,class:'form-control' %>
  </div>

  <div class="col-md-6">
    	<%= form.label :email_ID,class:'form-label' %>
		<%= form.text_field :mail_id ,class: 'form-control' %>	
  </div>

  <div class="col-md-6">
    	<%= form.label :gender,class:'form-label' %><br>
		<%= form.select :gender,[ 'Male','Female','Others'],class:'form-control'  %>
  </div>

  <div class="col-md-6">
  		<%= form.label :occupation,class:'form-label' %><br>
  		<%= form.select :occupation , [ 'Housewife','Teacher','Business','Student','Job/Service','Others' ] ,class:'form-select'%>
  </div>

  <div class="col-md-6">
  		<%= form.label :city ,class:'form-label'%>
		<%= form.text_field :city ,class:'form-control' %>
  </div>

  <div class="col-md-4">
  		<%= form.label :state,class:'form-label' %>
   		<%= form.select :SELECT_STATE , [ 'Andhra Pradesh','Assam','Bihar','Chandigarh','Delhi','Goa','Gujarat','Haryana','Jammu','Kerala','Maharashtra','Odisha','Punjab','Sikkim','Tamil Nadu','Tripura','Uttar Pradesh','Uttarakhand','West Bengal','Others' ],class:'form-select' %>
  </div>

  <div class="col-md-2">
   		<%= form.label :pin_Code ,class:'form-label' %>
		<%= form.text_field :pincode,class:'form-control' %>
  </div><br>

  <div class="col-md-12">
   		<%= form.submit class:'btn btn-primary' %>
  </div>
	<% end %>
</form>