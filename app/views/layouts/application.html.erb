    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
  <ul>
    <li class="title"><h2><%= image_tag 'book_logo.jpeg',width:50,height:50 ,class:'logo'%> <%=link_to 'Book Shopy', root_path ,class:"font_logo"%></h2></li>
    <% if user_signed_in? %> 
      <li class="session-li"><%= link_to "LOGOUT", destroy_user_session_path, data:{turbo_method: :delete },class:'session'%> </li>
      
     
      <li class="session-li"><%= link_to 'ACCOUNT',new_profile_path,class:'session' %></li>
    <% else %>
      <li class="session-li "><%= link_to "SIGNIN", new_user_session_path ,class:'session'%> </li>
      <li class="session-li "><%= link_to 'SIGNUP' ,new_user_registration_path ,class:'session'%></li>
    <% end %>
    
  </ul>
</nav>

 <!-- flash message for devise -->
 <% if flash.any? %>
    <center>
    <div class="alert alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Success!</strong> <%= notice %>
    </div>
    </center>
<% end %>


